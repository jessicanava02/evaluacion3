                    Console.WriteLine("si sus perro  es mediano indique a continuacion cuantos meses tiene tu cachorro:");
            Console.WriteLine("si sus perro no es pequeño precione el numero 8");
              
                dato = Console.ReadLine();
                EdadPerro = Convert.ToInt32(dato);
                 
                 while(edad > 0 && opcion != 8  ) 
                 Console.WriteLine("Indique cuantos meses tiene su perro");

                Console.WriteLine("1 -2");
                Console.WriteLine("2 - 3");
                Console.WriteLine("3 - 4");
                Console.WriteLine("4 - 5");
                //Tamaño Miniatura
                
                   
