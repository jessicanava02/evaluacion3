                    switch (ActividadPerro) {
                        case 1:
                            Console.WriteLine("Su cachorro debe consumir de 115 a 190 gramos.");
                            break;
                        case 2:
                            Console.WriteLine("Su cachorro debe consumir de 100 a 170 gramos.");
                            break;
