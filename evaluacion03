                if(peso <= 5 && peso >= 2) 
                {
                    
                    switch (ActividadPerro) {
                        case 1:
                            Console.WriteLine("Su cachorro debe consumir de 60 a 115 gramos.");
                            break;
                        case 2:
                            Console.WriteLine("Su cachorro debe consumir de 55 a 100 gramos.");
                            break;
                        case 3:
                            Console.WriteLine("Su cachorro debe consumir de 45 a 85 gramos.");
                            break;
