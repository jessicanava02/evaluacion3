                Console.WriteLine("si sus perro no es miniatura precione el numero 6");

                dato = Console.ReadLine();
                EdadPerro = Convert.ToInt32(dato);
                 
                 while(edad > 0 && opcion != 6  ) 
                 Console.WriteLine("Indique cuantos meses tiene su perro");

                Console.WriteLine("1 -2");
                Console.WriteLine("2 - 3");
                Console.WriteLine("3 - 4");
                Console.WriteLine("4 - 5");
                //Tamaño Miniatura
                
                   
                    switch (EdadPerro) {
                        case 1:
                            Console.WriteLine("50");
                            break;
                        case 2:
                            Console.WriteLine("60");
                            break;
                        case 3:
                            Console.WriteLine("60");
                            break;
                        case 4:
                            Console.WriteLine("60");
                            break;
                    }

               
            }
            while(opcion  != 6);

                        
            Console.WriteLine("si sus perro  es pequeño indique a continuacion cuantos meses tiene tu cachorro:");
            Console.WriteLine("si sus perro no es pequeño precione el numero 7");
              
                dato = Console.ReadLine();
                EdadPerro = Convert.ToInt32(dato);
                 
                 while(edad > 0 && opcion != 7  ) 
                 Console.WriteLine("Indique cuantos meses tiene su perro");

                Console.WriteLine("1 -2");
                Console.WriteLine("2 - 3");
                Console.WriteLine("3 - 4");
                Console.WriteLine("4 - 5");
                //Tamaño Miniatura
                
                   
                    switch (EdadPerro) {
                        case 1:
                            Console.WriteLine("95");
                            break;
                        case 2:
                            Console.WriteLine("110");
                            break;
                        case 3:
                            Console.WriteLine("115");
                            break;
                        case 4:
                            Console.WriteLine("115");
                            break;
                    }
